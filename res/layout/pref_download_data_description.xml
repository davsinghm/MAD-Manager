<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="?newDownloadListBg" >

        <TextView
        android:id="@android:id/title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="12.0dip"
        android:paddingLeft="16.0dip"
        android:paddingRight="16.0dip"
        android:paddingTop="12.0dip"
        android:textColor="?holoBlue"
        android:textSize="17.0sp"
        android:textStyle="bold" />
        
    <TextView
        android:id="@android:id/summary"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="14dip"
        android:paddingLeft="16dip"
        android:paddingRight="16dip"
        android:textAppearance="@style/MAD.TextAppearance.Data" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:gravity="center_vertical"
        android:paddingBottom="14dip"
        android:paddingLeft="16dip"
        android:paddingRight="16dip" >

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <RatingBar
                android:id="@+id/ratingBarComment"
                style="?ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/rateCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dip"
                android:textAppearance="@style/TextAppearance.Small"
                android:textColor="?textColorPrimary" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:gravity="right" >

            <TextView
                android:id="@+id/downloads"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.Small"
                android:textColor="?textColorPrimary" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="12dip"
        android:background="?newDownloadSeperatorBg"
        android:gravity="top" >

        <View
            android:layout_width="fill_parent"
            android:layout_height="2dip"
            android:background="?newDownloadSeperator" />
    </LinearLayout>

</LinearLayout>